<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_stock_quant_tree_inherit" model="ir.ui.view">
        <field name="name">stock.quant.tree.inherit.label</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree"/>
        <field name="arch" type="xml">

            <xpath expr="//tree" position="attributes">
                <attribute name="js_class">stock_quant_list_inherit</attribute>
            </xpath>
            <xpath expr="//field[@name='quantity']" position="after">
                <button name="action_print_label"
                        string="Imprimer"
                        type="object"
                        class="oe_highlight"
                        icon="fa-print"
                        />
            </xpath>

            <xpath expr="//field[@name='product_id']" position="before">
                <button name="action_open_label_layout"
                        string="Option"
                        type="object"
                        class="btn-primary"
                        icon="fa-print"
                        />
            </xpath>
            <!--
            <xpath expr="//field[@name='quantity']" position="after">
                <button name="action_print_label"
                        string="Print Labels"
                        type="object"
                        class="btn-secondary"
                        icon="fa-print"/>
            </xpath>

            <xpath expr="//header/button[@name='action_inventory_at_date']" position="before">
                <button name="action_print_label"
                        string="Print labels"
                        type="object"
                        class="btn-secondary"
                        icon="fa-print"
                        display="always"/>
            </xpath>
            -->
        </field>
    </record>
</odoo>
