<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-inherit="point_of_sale.ReceiptScreen" t-inherit-mode="extension">
        <xpath expr="//button[contains(@class, 'print')]" position="after">
            <button class="button print btn btn-lg btn-outline-secondary w-100 py-3 mt-2"
                    t-on-click="printGiftReceipt"
                    style="background-color: #77B254; color: white;">
                <i class="fa fa-gift ms-2" t-ref="order-print-receipt-button-gift"></i> Imprimer Ticket Cadeau
            </button>
        </xpath>
    </t>
</templates>

